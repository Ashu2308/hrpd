<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linlay_event_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        android:src="@mipmap/icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_event_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="sdfsdfdgftfhhhhhhhhhhhhhhhhhcuyjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjj"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/txt_event_item_datetime"
                android:textColor="@color/text_color"
                 android:autoLink="web"
                 android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

<TextView
    android:id="@+id/txt_event_item_datetime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginBottom="2dp"
    android:text="3 days ago"
    android:layout_alignParentRight="true"
     android:layout_centerVertical="true"
    android:layout_marginTop="5dp"
    android:textSize="10sp"
    android:textColor="@color/text_color" />
        </RelativeLayout>

       
        
 

</LinearLayout>